
<div class="container-fluid">
  <div class="row-fluid">
    
    <div id="enter_url" class="span6">
      <div class="hero-unit">
        <h2>Shorten Yer URL Here</h2>
        <form id="enter_form" method="post" action="/urls">
          <input type="text" name="original_url" value="http://">
          <input type="submit" value="Shorten it!">
        </form>
      </div>
    </div>
    <div class="span6">
      <div class="hero-unit">
        <h3>Create an Account</h3>
        <p>To save your shortened urls</p>
        <form method="post" action="/create">
          <input type="text" name="name" placeholder="your name">
          <input type="text" name="email" placeholder="your email">
          <input type="password" name="password" placeholder="password">
          <input type="submit" value='Create User'>
        </form> 
      </div>
    </div>  
  </div>
  <div class="row-fluid">
    <div id="return_url" class="span6">
        <% if @new_url %>
          <div class="hero-unit">
            <h2>Your Link!</h2>
            <p><a id="shorty" href="<%= @new_url.short_url %>">http://<%= @new_url.short_url %></a></p>
          </div>
        <% end %>
    </div>
  </div>

</div>

