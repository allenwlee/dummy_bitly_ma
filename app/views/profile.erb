<div class="container-fluid">
	<div class="row-fluid">
		<div class="span9">
			<div class="hero-unit">	
				<h1><%=@user.name%></h1>
				<h2><%=@user.email%></h1>
			</div>
		</div>
	</div>
</div>

<div class="container-fluid">
	<div class="row-fluid">
		<div class="span9">
			<table class="table table-striped">
				<tr>
					<th>Original URL</th>
					<th>Shortened URL</th>
					<th>Visits</th>
				</tr>
				<% if @user_urls %>
				<% @user_urls.each do |url| %>
				<tr>
					<td><a href="<%=url.original_url %>"><%=url.original_url %></a></td>
					<td><a href="/<%=url.short_url %>"><%=url.short_url %></a></td>
					<td><%=url.click_count %></td>
				</tr>
				<% end %>
				<% end %>
			</table>
		</div>
	</div>
</div>